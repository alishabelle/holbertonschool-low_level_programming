#include "sort.h"

/**
 * bubble_sort -
 *
 * Return: 
 */
void bubble_sort(int *array, size_t size)
{
	int temp;
	int i = 0, len, j = 0;
	
	len  = size - 1;
/*	y = size - 2;*/
	
	while (j < len)
	{
		while (i < len - j)
		{
			if (array[i] > array[i + 1])
			{
				temp = array[i + 1];
				array[i + 1] = array[i];
				array[i] = temp;
				print_array(array, size);
			}
			i++;
		}
		i = 0;
		j++;
		
	}
/*
		while (array[y] > 0)
		{
			if (array[y] > array[len])
			{
				len--;
				y--;
			}
			else
				break;
		
				}*/
}
